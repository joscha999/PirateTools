@page "/StepNightlyCostExact"
@layout VerticalCenterLayout
@inherits WizardComponentBase

@if (AppData.CurrentReport == null || AppData.CurrentReport.Pirate == null) {
    return;
}

<h1>Übernachtungskosten</h1>

<div class="mb-3">
    <label class="form-label">Übernachtungskosten</label>
    <input class="form-control" type="number" min="0" @bind=AppData.CurrentReport.AccommodationCosts />
</div>

<div class="card mb-3 not-allowed">
    <div class="card-body">
        <h5 class="card-title">Bild des Belegs hochladen</h5>
        <p class="card-text">Diese Funktion existiert noch nicht D:</p>
    </div>
</div>

<div class="d-flex justify-content-between">
    <div style="flex: 1;">
        <NavLink href="StepNightlyCostTypeSelection" class="btn btn-primary">Zurück</NavLink>
    </div>
    <div>
        <NavLink href="/Overview" class="btn btn-primary">Übersicht</NavLink>
    </div>
    <div style="flex: 1;" class="d-flex justify-content-end">
        <NavLink href="StepOtherCostsSelection" class="btn btn-primary">Weiter</NavLink>
    </div>
</div>