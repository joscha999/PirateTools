@page "/StepBankInformationEntry"

@if (AppData.CurrentReport == null || AppData.CurrentReport.Pirate == null) {
    return;
}

<div class="row" style="height: 100%; align-items: center;">
    <div>
        <h1>Bankdaten</h1>

        <div class="mb-3">
            <label class="form-label">IBAN</label>
            <input class="form-control" @bind=AppData.CurrentReport.Pirate.IBAN />
        </div>

        <div class="mb-3">
            <label class="form-label">BIC</label>
            <input class="form-control" @bind=AppData.CurrentReport.Pirate.BIC />
        </div>

        <div class="d-flex justify-content-between">
            <NavLink href="/StepDonationSelection" class="btn btn-primary">Zurück</NavLink>
            <NavLink href="/StepSummary" class="btn btn-primary">Weiter</NavLink>
        </div>
    </div>
</div>