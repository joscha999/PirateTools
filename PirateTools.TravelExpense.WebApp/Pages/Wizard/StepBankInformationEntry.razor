@layout VerticalCenterLayout
@inherits WizardComponentBase

@if (AppData.CurrentReport == null || AppData.CurrentReport.User == null) {
    return;
}

<h1>Bankdaten</h1>

<div class="mb-3">
    <label class="form-label">IBAN</label>
    <input class="form-control" @bind=AppData.CurrentReport.User.IBAN />
</div>

<div class="mb-3">
    <label class="form-label">BIC</label>
    <input class="form-control" @bind=AppData.CurrentReport.User.BIC />
</div>

<div class="d-flex justify-content-between">
    <div style="flex: 1;">
        <NavLink href="/StepDonationSelection" class="btn btn-primary">Zurück</NavLink>
    </div>
    <div>
        <NavLink href="/Overview" class="btn btn-primary">Übersicht</NavLink>
    </div>
    <div style="flex: 1;" class="d-flex justify-content-end">
        <NavLink @onclick=GoNext class="btn btn-primary">Weiter</NavLink>
    </div>
</div>