@page "/StepSummary"

@if (AppData.CurrentReport == null || AppData.CurrentReport.Pirate == null) {
    return;
}

<div class="row" style="height: 100%; align-items: center;">
    <div>
        <h1>Zusammenfassung</h1>

        <div class="mb-3">
            <label class="form-label">Anzahl der Anlagen</label>
            <input class="form-control" type="number" min="0" @bind=AppData.CurrentReport.AttachmentCount />
        </div>

        <div class="d-flex justify-content-between">
            <NavLink @onclick=GoBack class="btn btn-primary">Zurück</NavLink>
            <NavLink @onclick=BuildPDF class="btn btn-success">PDF Speichern</NavLink>
        </div>
    </div>
</div>