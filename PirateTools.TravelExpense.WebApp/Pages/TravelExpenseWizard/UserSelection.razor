@page "/TravelExpenseWizard/UserSelection"
@using PirateTools.Models
@inherits WizardComponentBase

@if (Report == null) {
    <SpinnerComponent />
    return;
}

<TravelExpenseWizardHeader Step="TravelExpenseWizardStep.UserSelection">
    <Title>Wähle einen Benutzer</Title>
</TravelExpenseWizardHeader>

<div class="mb-3">
    <a @onclick=@NewUser>
        <div class="card box-highlight pointer">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title">Mr. X</h5>
                    <p class="card-text">Benutzerdaten manuell angeben</p>
                </div>
                <div class="d-flex flex-column align-items-center">
                    @if (!Report.TryGetMeta(MetaKeys.PirateId, out var _)) {
                        <i class="bi bi-check-lg text-success fs-4"></i>
                        <span>Ausgewählt</span>
                    }
                </div>
            </div>
        </div>
    </a>
</div>

<hr />

@foreach (var user in AppData.Config.Users) {
    var u = user;

    <div class="mb-3">
        <a @onclick=@(() => UseUser(u))>
            <div class="card box-highlight pointer">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">@user.Name</h5>
                        <p class="card-text">Verband: @(user.Federation?.FullName())</p>
                    </div>
                    <div class="d-flex flex-column align-items-center">
                        @if (Report.TryGetMeta(MetaKeys.PirateId, out var userId) && userId == u.Id.ToString()) {
                            <i class="bi bi-check-lg text-success fs-4"></i>
                            <span>Ausgewählt</span>
                        }
                    </div>
                </div>
            </div>
        </a>
    </div>
}